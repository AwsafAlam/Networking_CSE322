sudo ifconfig eth0:1 192.168.10.1 netmask 255.255.255.0 up
sudo ifconfig eth0:2 192.168.10.2 netmask 255.255.255.0 up
sudo ifconfig eth0:3 192.168.10.3 netmask 255.255.255.0 up
sudo ifconfig eth0:4 192.168.10.4 netmask 255.255.255.0 up
sudo ifconfig eth0:100 192.168.10.100 netmask 255.255.255.0 up
// for old version




//For newer versions.
-- this creates a virtual network of riuters which we can connect to,
-- no need for internet connection even.

sudo ifconfig enp7s0:1 192.168.10.1 netmask 255.255.255.0 up
sudo ifconfig enp7s0:2 192.168.10.2 netmask 255.255.255.0 up
sudo ifconfig enp7s0:3 192.168.10.3 netmask 255.255.255.0 up
sudo ifconfig enp7s0:4 192.168.10.4 netmask 255.255.255.0 up
sudo ifconfig enp7s0:100 192.168.10.100 netmask 255.255.255.0 up